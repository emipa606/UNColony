  <!-- Paint recipe A -->
  <RecipeDef>
    <defName>SadjuukSyntheticPaintRecipe</defName>
    <label>make 5 Paint from chemfuel</label>
    <description>Synthesize paint from biofuel.</description>
    <jobString>Synthesize paint.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>200</workAmount>
    <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SadjuukSyntheticPaint>5</SadjuukSyntheticPaint>
    </products>
  </RecipeDef>
